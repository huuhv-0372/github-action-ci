{
  "name": "jbm-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "NEXT_SHARP_PATH=/app/node_modules/sharp next build && tsc --project tsconfig.server.json",
    "start": "node dist/server.js",
    "lint": "next lint",
    "gkc": "bash gkc_util_hashcode_script.bash",
    "prettier": "prettier --check .",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint --fix",
    "fix:prettier": "yarn prettier --write",
    "deploy:build": "DOCKER_DEFAULT_PLATFORM=linux/amd64 docker run --rm -w /app -v \"$(pwd):/app\" -v \"/app/node_modules\" node:18.15.0-alpine3.16 sh -c ./deploy-build.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.4",
    "cookies-next": "^2.1.1",
    "moment": "^2.29.4",
    "next": "13.2.4",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.1.0",
    "postcss": "^8.4.21",
    "react": "18.2.0",
    "react-datepicker": "^4.11.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-hook-form": "^7.43.9",
    "react-select": "^5.7.2",
    "sharp": "^0.32.4",
    "swr": "^2.1.2",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "20.3.2",
    "@types/react": "18.0.32",
    "@types/react-datepicker": "^4.10.0",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.0.1",
    "eslint-config-next": "^13.2.4",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix && git add ."
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
